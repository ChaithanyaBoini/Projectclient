@model Projectclient.Models.Entities.LOGIN

@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>


@using(Html.BeginForm()) 
{
    
        <table>
            <tr>
                <td>USERNAME</td>
            </tr>
            <tr>
                <td><input type="text" id="username" /></td>
            </tr>
            <tr>
                <td>EMAIL</td>
            </tr>
            <tr>
                <td><input type="email" id="email" /></td>
            </tr>
            <tr>
                <td>PASSWORD</td>
            </tr>
            <tr>
                <td><input type="password" id="password" /></td>
            </tr>
            <tr>
                <td>TYPE</td>
            </tr>
            <tr>
                <td><input type="text" id="type" /></td>
            </tr>
            <tr>
                <td><input type="button" value="register" id="btnregister" /></td>
            </tr>
        </table>
    
}



<script>
    $(document).ready(function () {

        $("#btnregister").click(function () {

            var lo = {};
            lo.username = $("#username");
            lo.email = $("#email").val();
            lo.password = $("#password").val();
            lo.type = $("#type").val();
            alert(lo);
            alert(JSON.stringify(lo));
        

            $.ajax({
                type: 'post',
                data: JSON.stringify(lo),
                url: 'https://localhost:44334/api/Project/Signup',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                success: function (data)
                {
                    alert(data);
                },
                error: function (x, err)
                {
                    alert(x.readyState);
                    alert(x.responseText);
                }
            });

        });

    });
</script>
